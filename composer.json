{
  "name": "levkopo/dribots",
  "description": "Chat bot library for VK, Viber, Telegram and other platforms",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",
  "version": "0.1-RC",
  "authors": [
    {
      "name": "levkopo",
      "email": "levkopoag@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "DriBots\\": "src/DriBots"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "DriBots\\": "tests/DriBots"
    }
  },

  "extra": {
    "branch-alias": {
      "dev-main": "1.x-dev"
    }
  },

  "require": {
    "php": ">=8.0",
    "monolog/monolog": "^2.2"
  },

  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpunit/phpunit": "^9.5"
  },

  "scripts": {
    "test": "vendor\\bin\\phpunit TestSimpleBot tests/DriBots/SimpleBot/TestSimpleBot.php"
  }
}
